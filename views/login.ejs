        <form action="/verifylogin" method="post"
            style="background:linear-gradient(180deg, rgba(0, 0, 0, 0.5), rgba(105, 216, 228, 0.5));">


            <h1 style="color: aliceblue;"> Login </h1>


            <% if(message.length> 0){ %>
                <div class="alert alert-danger">
                    <%= message %>
                </div>
                <% } %>


                    <div class="left-container">
                        <div class="input-box-container">
                            <div class="input-box">
                                <input type="email" name="email" placeholder="Your Email">
                            </div>

                            <div class="input-box">
                                <input type="password" name="password" placeholder="Password">
                            </div>
                        </div>
                        <div class="password-setting">
                            <div class="remember-box">
                                <input type="checkbox" id="remember">

                                <label for="remember"> Remember</label> <br>
                            </div>
                        </div>
                        <div class="password-setting2">
                            <!-- <button type="button" class=" btn btn-outline-dark forget-password" data-bs-toggle="modal" data-bs-target="#forgetPassword">
                                forgot password ? 
                             </button> -->
                             <a href="/forget-password" class="forget-password"> Forgot Password ? </a>

                        </div>


                    </div>

                    <div class="right-container">

                        <!-- button start -->

                        <div class="btn-container">
                            <!-- login button -->
                            <button type="submit" class=" btn sign-in "> Log In </button>

                            <!-- registration button -->


                            <center class="lastline"> Don't have an account?</center>
                            <button class="sign-up"> <a href="/registration">Register </a> </button>
                        </div>


                    </div>
        </form>
    </div>




