<body>
    <section class="sub-header" style="
        background: linear-gradient(rgba(10, 10, 10, 0.5), rgba(4, 9, 30, 0.7)),
          url(/images/banner2.jpg);
        background-position: center;
        background-size: cover;
      ">
        <nav>
            <a href="/dashboard"> <img src="/images/LNCT-Logo.png" /></a>

            <div class="nav-links" id="navLinks">
                <i class="fa fa-xmark" onclick="hidemenu()"></i>
                <ul>
                    <li class="hvr"><a href="/dashboard"> Home</a></li>
                    <li class="hvr"> <a href="/about"> About</a></li>
                    <li class="hvr"><a href="/course"> Course</a></li>
                    <li class="hvr"><a href="/blog"> Blog</a></li>
                    <li class="hvr"><a href="/contact"> Contact</a></li>
                    <li><a href="/logout"> Logout</a></li>
                </ul>
            </div>
            <i class="fa fa-bars" onclick="showmenu()"></i>
        </nav>
        <h1 class="my-5"> Course Edit</h1>
    </section>
        <div class="container-fluid mt-5 pt-5">
          
            <div class="container display">
                <!-- --- btech form --- -->
                <form action="/courseUpdate/<%= courseedit.id %>" method="post">
                    <div class="input-group mb-2 ">
                        <span class="input-group-text" id="inputGroup-sizing-default">Username</span>
                        <input type="text" name="name" value="<%= courseedit.name %>" class="form-control " required>
                    </div>
                    <div class="input-group mb-2">
                        <span class="input-group-text" id="basic-addon1">@</span>
                        <input type="email" name="email" value="<%= courseedit.email %>" class="form-control" required>
                    </div>
                    <div class="input-group mb-2">
                        <span class="input-group-text" id="inputGroup-sizing-default">Mobile No</span>
                        <input type="tel" name="mobileNo" value="<%= courseedit.number %>" class="form-control"
                            required>
                    </div>
                    <div class="input-group mb-2">
                        <span class="input-group-text" id="inputGroup-sizing-default"> DOB</span>
                        <input type="date" name="dob" value="<%= courseedit.dob %>" class="form-control" required>
                    </div>

                    <div class="input-group-text text-dark">
                        <label class=" input-group-text mx-2"> Gender</label> <br>
                        <input <%=courseedit.gender=='male' ?'checked':'' %> type="radio" name="gender" value="male"
                        class="mx-1" > &nbsp; Male
                        <input <%=courseedit.gender=='female' ?'checked':'' %> type="radio" name="gender" value="female"
                        class="mx-1"> &nbsp; Female
                        <br>
                    </div>
                    <div class="input-group mb-2">
                        <span class="input-group-text" id="inputGroup-sizing-default">Address</span>
                        <textarea class="form-control" name="address" id="" cols="" rows=""
                            required> <%= courseedit.address %></textarea>
                    </div>

                    <div class="input-group mb-2">
                        <label class="input-group-text" for="inputGroupSelect01"> College</label> <br>
                        <select class="form-select" name="college" id="" required>
                            <option selected="">Choose..</option>
                            <option <%=courseedit.college=='IIT Bombay' ?'selected':'' %> value="IIT Bombay"> IIT Bombay
                            </option>
                            <option <%=courseedit.college=='IIT Kota' ?'selected':'' %> value="IIT Kota"> IIT Kota
                            </option>
                            <option <%=courseedit.college=='IIT Kharagpur' ?'selected':'' %> value="IIT Kharagpur"> IIT
                                Kharagpur </option>
                        </select>
                    </div>

                    <div class="input-group mb-2">
                        <label class="input-group-text" for="inputGroupSelect01"> Course</label> <br>
                        <select class="form-select" name="course" id="" required>
                            <option selected="">Choose...</option>
                            <option <%=courseedit.course=='B.Tech' ?'selected':'' %> value="B.Tech"> B.Tech </option>
                        </select>
                    </div>
                    <div class="input-group mb-2">
                        <label class="input-group-text" for="inputGroupSelect01"> Branch</label> <br>
                        <select class="form-select" name="branch" id="" required>
                            <option selected="">Choose..</option>
                            <option <%=courseedit.branch=='IT' ?'selected':'' %> value="IT"> IT </option>
                            <option <%=courseedit.branch=='CS' ?'selected':'' %> value="CS"> CS </option>
                            <option <%=courseedit.branch=='Electronic' ?'selected':'' %> value="Electronic"> Electronic
                            </option>
                        </select>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-lg btn-block px-2" style="background: rgb(240, 133, 26);">
                            UPDATE</button>
                    </div>

                </form>
            </div>
        </div>
        <br><br><br>



